{
	"name": "vscode-purty",
	"displayName": "vscode-purty",
	"publisher": "mvakula",
	"author": {
		"name": "Mika Vakula"
	},
	"description": "PureScript formatter",
	"repository": {
		"type": "git",
		"url": "https://github.com/mvakula/vscode-purty"
	},
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:purescript"
	],
	"main": "./extension.js",
	"icon": "images/icon.png",
	"contributes": {
		"languages": [
			{
				"id": "purescript",
				"aliases": [
					"PureScript",
					"purs"
				],
				"extensions": [
					".purs"
				]
			}
		],
		"configuration": {
			"title": "Purty",
			"properties": {
				"purty.pathToPurty": {
					"type": "string",
					"default": "",
					"markdownDescription": "Specifies the location of the purty executable (if unspecified I will try \"cwd/node_modules/.bin/purty\" and then look in the `PATH` environment variable)."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"diff": ">=4.0.2",
		"eslint": "^7.1.0",
		"vscode": "^1.1.37"
	},
	"dependencies": {
		"pkg-up": "^3.1.0"
	}
}
